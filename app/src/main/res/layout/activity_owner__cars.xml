<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Owner_Cars">

    <ListView
        android:id="@+id/carname_listView"
        android:layout_width="0dp"
        android:layout_height="437dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/carseats_listView"
        app:layout_constraintStart_toEndOf="@+id/carno_listView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ListView
        android:id="@+id/carno_listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/carname_listView"
        app:layout_constraintEnd_toStartOf="@+id/carname_listView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carname_listView" />

    <ListView
        android:id="@+id/carseats_listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/carname_listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/carname_listView"
        app:layout_constraintTop_toTopOf="@+id/carname_listView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="8dp"
        android:text="Car No."
        app:layout_constraintBottom_toTopOf="@+id/carno_listView"
        app:layout_constraintStart_toStartOf="@+id/carno_listView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:text="Car Name"
        app:layout_constraintStart_toStartOf="@+id/carname_listView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="19dp"
        android:text="Seats"
        app:layout_constraintBottom_toTopOf="@+id/carseats_listView"
        app:layout_constraintStart_toStartOf="@+id/carseats_listView" />

</android.support.constraint.ConstraintLayout>